@model IDGS903_tema1.Models.Traductor

@{
    ViewBag.Title = "Traductor";
}

<h2>Traductor</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row">
    <div class="form-horizontal col-6">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Palabra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Palabra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Palabra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Idioma, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.RadioButtonFor(model => model.Idioma, true)@Html.Label("Inglés") <br />
                @Html.RadioButtonFor(model => model.Idioma, false)@Html.Label("Español")
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Traducir" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div class="col-6">
        <hr />
        <h4>@ViewBag.Traduccion</h4>
    </div>
</div>
}